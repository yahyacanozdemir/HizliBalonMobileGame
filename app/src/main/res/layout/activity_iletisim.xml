<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iletisim">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/iletisim">

        <TextView
            android:id="@+id/textView"
            android:layout_width="407dp"
            android:layout_height="90dp"
            android:layout_marginTop="123dp"
            android:layout_marginLeft="0dp"
            android:text="BİZİMLE BAĞLANTI KURUN  VE HIZLI BALON'U GELİŞTİRMEMİZE YARDIMCI OLUN"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="371dp"
            android:layout_height="44dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="10dp"
            android:hint="İsim Soyisim"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="371dp"
            android:layout_height="44dp"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="10dp"
            android:hint="Öneriler,Rekora Dair Bilgiler" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="371dp"
            android:layout_height="44dp"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="10dp"
            android:hint="Kategori (Zorluk, Arayüz, Rekor Kırma vb)"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="300dp"
            android:text="***E-Posta ya da Gmail uygulaması seçilmeli***"
            android:textColor="?attr/colorError"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="81dp"
            android:layout_height="34dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="200dp"
            android:background="@android:color/holo_green_light"
            android:onClick="gonder"
            android:text="Gönder" />





    </RelativeLayout>


</FrameLayout>